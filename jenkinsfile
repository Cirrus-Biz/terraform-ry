pipeline {
    environment {
        tfvars = credentials('ry-terraform-vars')
    }
    agent any
    stages {
        stage('Terraform Init') {
            steps {
                sh 'terraform init' 
            }   
        }
        stage('Tflint'){
            steps{
                sh 'tflint --help'
                sh 'tflint'
            }
        }
        stage('Terraform Plan') {
            steps {
                sh 'terraform plan -var-file=${tfvars} > check.json'
                sh 'grep "Plan:" check.json > checked.txt'
            }
        }
        stage('Terraform Apply') {
            steps {
                sh '(ls|diff changekey.txt checked.txt)||terraform apply -var-file=$tfvars -auto-approve'
            }
        }
    }
}
pipeline {
    agent any
    stages {
        stage('Terraform Init') {
            steps {
                sh 'terraform init' 
            }   
        }
        stage('Terraform Plan') {
            environment {
                tfvars = credentials('ry-terraform-vars')
            }
            steps {
                sh 'terraform plan -var-file=${tfvars} > check.json'
            }
        }
        stage('Terraform Change Check') {
            steps {
               sh 'grep "Plan:" check.json > checked.json'
               script {
                    if (checked.json == '[0m[1mPlan:[0m 21 to add, 0 to change, 0 to destroy.') {
                    echo 'it worked'
                } else {
                    echo "it didn't work"
                }
               }
            }
        }
    }
}
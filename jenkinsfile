pipeline {
    agent any
    stages {
        stage('Terraform Init') {
            steps {
                sh 'terraform init' 
            }   
        }
        stage('Terraform Plan') {
            environment {
                tfvars = credentials('ry-terraform-vars')
            }
            steps {
                sh 'terraform plan -var-file=${tfvars} > check.json'
                sh 'grep "Plan:" check.json > checked.json'
            }
        }
        stage('Terraform Change Check') {
            def jsonString = 'checked.json'
            def jsonObj = readJSON text: jsonString

            sh 'echo $jsonObj'
        }
    }
}
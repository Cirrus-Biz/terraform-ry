pipeline {
    environment {
        tfvars = credentials('ry-terraform-vars')
    }
    agent any
    stages {
        stage('Terraform Init') {
            steps {
                sh 'terraform init' 
            }   
        }
        stage('Terraform Plan') {
            steps {
                sh 'terraform plan -var-file=${tfvars} > check.json'
                sh 'grep "Plan:" check.json > checked.txt'
            }
        }
        stage('Terraform Change Check') {
            steps {
                sh '(ls|diff changekey.txt checked.txt)||terraform apply -var-file=$tfvars'
            }
        }
    }
}
pipeline {
    agent any
    stages {
        stage('Terraform Init') {
            steps {
                sh 'terraform init' 
            }   
        }
        stage('Terraform Plan') {
            environment {
                tfvars = credentials('ry-terraform-vars')
            }
            steps {
                sh 'terraform plan -var-file=${tfvars} > check.json'
            }
        }
        stage('Terraform Change Check') {
            if (1+1 == 2) {
                sh 'echo "it worked"'
            }
            else {
                sh "echo 'it didn't work'"
            }
        }
    }
}
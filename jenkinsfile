pipeline {
    agent any
    stages {
        stage('Terraform Init') {
            steps {
                dir("terraform") {
                    sh 'terraform init'
                }
            }
        }
        stage('Terraform Plan') {
            steps {
                dir("terraform") {
                    withAWS(credentials: 'ry-aws-credential', region: "$env.AWS_REGION") {
                        withCredentials([file(credentialsId: 'tfvars', varible: 'VARS')])
                    }
                }
            }
        }
    }
}
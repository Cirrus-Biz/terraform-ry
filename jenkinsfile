pipeline {
    agent any
    stages {
        stage('Terraform Init') {
            steps {
                sh 'terraform init' 
            }   
        }
        stage('Terraform Plan') {
            environment {
                tfvars = credentials('ry-terraform-vars')
            }
            steps {
                sh 'terraform plan -var-file=${tfvars} > check.json'
            }
        }
        stage('Terraform Change Check') {
            steps {
                script {
                    if (env.BRANCH_NAME == 'master') {
                        echo 'I only execute on the master branch'
                    } else {
                        echo 'I execute elsewhere'
                    }
                }
            }
        }
    }
}
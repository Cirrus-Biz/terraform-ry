pipeline {
    agent any
    stages {
        stage('Terraform Init') {
            steps {
                sh 'terraform init' 
            }   
        }
        stage('Terraform Plan') {
            environment {
                tfvars = credentials('ry-terraform-vars')
            }
            steps {
                sh 'terraform plan -var-file=${tfvars}'
                sh 'terraform plan -var-file=${tfvars} > check.json'
            }
        }
        stage('Terraform Change Check') {
            when {
                expression {sh "grep '0 to add, 0 to change, 0 to destroy.' check.json" != '0 to add, 0 to change, 0 to destroy.'}
            }
            steps {
                sh "echo 'it works'"
            }
        }
    }
}